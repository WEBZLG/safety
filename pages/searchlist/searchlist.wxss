/* pages/searchlist/searchlist.wxss */
@import "../../utils/wxParse/wxParse.wxss";
.search-box{
    display:flex;
    align-items:center;
    justify-content:space-evenly;
    position:fixed;
    left:30rpx;
    right:30rpx;
    top:0;
    background: rgba(242, 243, 247, 1);
}
.ipt{
    height:74rpx;
    border:2px solid #E45F4B;
    border-radius:5px;
    margin:30rpx auto;
    line-height:74rpx;
    padding-left:24rpx;
    flex:5;
    color: #DC4F51;
}
.search{
    color:#FFFEFE;
    background-color:#E45F4B;
    font-size:14px;
    padding-top:6rpx;
    padding-bottom:6rpx;
    flex:1;
    margin-left:30rpx;
}

.data-list{
    margin-top:70px;
}

.list-item{
    margin: 30rpx auto;
    border-bottom: 1px solid #CACACA;
}

.list-item:last-child{
    border: none;
}

.content{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    color:#333333;
    font-size:28rpx;
    font-weight:bold;
    font-family:PingFang-SC-Regular;
}

.title{
    color: #666666;
    font-size: 24rpx;
    margin: 30rpx auto;
}
.wxParse-p{
    overflow: hidden;
}